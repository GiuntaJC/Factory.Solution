@model Factory.Models.Machine
<h1>Edit machine</h1>
<h4>Machine being edited: @Html.DisplayFor(model => model.MachineName)</h4>

@using(Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.LabelFor(model => model.MachineName)
  @Html.EditorFor(model => model.MachineName)
  <br>
  @Html.Label("Select engineer")
  @Html.DropDownList("EngineerId")

  <input type="submit" value="save">
}

<p>@Html.ActionLink("Back to machine list", "Index")</p>
<p>@Html.ActionLink("Back to home", "Index", "Home")</p>